.card-tale
    position relative
    padding-left 1px
    padding-right 1px
    width 25%
    
    &:hover::before
        transform scale(1.1)
    
    &::before
        position absolute
        z-index 1
        left 1px
        top 0
        content ''
        display block
        width 'calc(%s - %s)' % (100% 2px)
        height 100%
        box-shadow 0 0 18px 0 rgba(black, 38%)
        background-color #fff
        transform scale(1)
        transition all .5s ease
        
    &:hover
        z-index 2
        
    &__inner
        position relative
        z-index 2
        padding_x(18px)
        padding_y(17px)
        
    &__inner-type-action
        position absolute
        z-index 2
        left 0
        top 17px
        
        .best-price
            span
                background-color light-blue
                
        .hit
            span
                background-color green-light
                
        .action
            span
                background-color pink
        
        span
            padding 5px 10px
            font-size 10px
            font-weight bold
            text-transform uppercase
            color white
            border-radius 0 12px 12px 0
            
    &__inner-image
        position relative
        width 100%
        height 195px
        border-bottom 1px solid line-card
            
        img
            position absolute
            left 0
            top 0
            right 0
            bottom 0
            margin auto
    
    &__description-name
        font-size 15px
        font-weight 600
        text-decoration none
        color dark-gray
            
    &__description-manufacturer
        display block
        font-size 12px
        color manufacturer
        
    &__prices
        display flex
        justify-content space-between
        
        
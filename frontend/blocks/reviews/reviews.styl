.reviews
    margin-top -5px
    
    &.index__reviews
    
        & ^[0]__tale
            
            &:nth-of-type(1)
                margin-bottom 30px
                
                & ^[0]__tale-description
                    border-bottom 1px solid review-border-bottom
    
    .section-title
        color article-index
        
    &__list
        margin-top 16px
        
    &__tale
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
        
    &__tale-image
        margin-top 10px
        width 101px
        height 100px
        background-size cover
        background-position center
        border 3px solid review-border
        border-radius 50%
        
    &__tale-description
        padding-bottom 30px
        width 'calc(%s - %s)' % (100% 126px)
        
    &__tale-name
        font-size 15px
        color article-index
        
    &__tale-date
        margin-top 2px
        padding-left 22px
        font-size 11px
        font-weight normal
        line-height normal
        color manufacturer
        background-image url(../../image/svg/calendar.svg)
        background-position left center
        background-repeat no-repeat
        
    &__tale-text
        position relative
        margin-top 15px
        text-indent 2em
        background-image url(../../image/svg/quotes.svg)
        background-position left top
        background-repeat no-repeat
        
        &::before
            position absolute
            left 0
            bottom 0
            content ''
            display block
            width 100%
            height 50px
            background-image linear-gradient(to top, white, rgba(white, 10%))
            
    &__all-reviews
        padding_x(34px)
        padding_y(4px)
        margin-top 15px
        display inline-block
        font-size 16px
        font-weight normal
        text-decoration none
        color white
        
    &__all-page
        
        & ^[0]__list
            margin-top 0
        
        & ^[0]__tale-text
              
          &::before
              display none
              
        & ^[0]__tale
        
            &:not(:first-child)
                margin-top 30px
        
            &:not(:last-child) ^[0]__tale-description
                border-bottom 1px solid review-border
                                       
        & ^[0]__tale-image
            margin-top 7px
            
        & ^[0]__tale-description
            padding-bottom 33px
                  
    &__pagination
        margin-top 25px
        margin-bottom 30px
              
              
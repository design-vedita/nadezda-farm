footer
    position relative
    overflow hidden
    
    &::before
        position absolute
        left -40px
        bottom -20%
        content ''
        display block
        width 250px
        height 350px
        background-image url(../../image/svg/pattern-left-90deg.svg)
        background-repeat no-repeat
        background-position center

    &::after
        position absolute
        right 4px
        bottom -11%
        content ''
        display block
        width 350px
        height 250px
        background-image url(../../image/svg/pattern-right.svg)
        background-repeat no-repeat
        background-position center
        
.footer
    padding-top 37px
    padding-bottom 26px
    background-color green-base
    
    ul
        
        margin 0
        padding 0
    
    a
        font-size 15px
        line-height 26px
        font-weight 600
        color white
        
    &__phone
        text-align right
                
        a
            padding-left 39px
            font-size 24px !important
            font-weight 600
            text-decoration none !important
            color white
            background-image url(../../image/svg/phone-white.svg)
            background-position 0 5px
            background-repeat no-repeat
        
        span
            margin-top -1px
            display block
            font-size 14px !important
            font-weight 600
            text-align right
            color myata
            
            span
                display inline
                color white
    
    &__logo
        margin-top 10px

.developer
    padding-top 17px
    padding-bottom 10px
    background-color developer
    
    p
        margin 0
        font-size 14px
        font-weight normal
        line-height 30px
        color rgba(white, 30%)
        
    &__logo
        padding-top 5px
        text-align right
.map
    margin-top 15px
    
    h1
        margin-bottom 33px
        
    &__card-image
        width 34%
        
    &__image-slide
        position relative
        height 60px
        border 1px solid review-border
    
        img
            position absolute
            left 0
            right 0
            top 0
            bottom 0
            margin auto
            width 95%
    
    &__carousel-wrapper
        padding-right 15px
        padding-left  58px
            
    &__card
        position relative
        
        &::before
            position absolute
            z-index -1
            left 0
            top 0
            content ''
            display block
            width 100%
            height 100%
            background-color white
            box-shadow 0 0 10px 0 rgba(black, 8%)
            
    &__card-inner
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
        align-content stretch
        
    &__rating
        
        img:not(:last-child)
            margin-right 4px
            
    &__in-stock
        padding-left 27px
        font-size 15px
        font-weight normal
        line-height normal
        color green-base
        background-image url(../../image/svg/in_stock.svg)
        background-position left center
        background-repeat no-repeat
        
    &__shelf-life
        padding-left 35px
        font-size 13px
        line-height 25px
        color orange-base
        background-image url(../../image/svg/shelf-life.svg)
        background-position left center
        background-repeat no-repeat
        
    &__only-prescription
        padding-left 35px
        font-size 13px
        line-height 25px
        color orange-base
        background-image url(../../image/svg/only-prescription.svg)
        background-position left center
        background-repeat no-repeat
        
    &__all-forms
        
        a
            font-size 15px
            line-height normal
            color green-base
            
    &__set-aside
        
        a
            padding-left 35px
            background-image url(../../image/svg/set-aside.svg)
            background-position left center
            background-repeat no-repeat
            
    &__carousel-wrapper
        position relative
        
    &__slide-prev,
    &__slide-next
        position absolute
        z-index 2
        top 'calc(%s - %s)' % (50% 9.5px)
        width 11px
        height 19px
        cursor pointer
    
        &::before
            position absolute
            left -2px
            top 4px
            content ''
            display block
            width 14px
            height 3.5px
            background-color carousel-arrow-map
            border-radius 5px
            transform rotate(-45deg)
            
        &::after
            position absolute
            left -2px
            bottom 4px
            content ''
            display block
            width 14px
            height 3.5px
            background-color carousel-arrow-map
            border-radius 5px
            transform rotate(45deg)
    
    &__slide-prev
        left 30px
            
    &__slide-next
        right 0
        transform rotate(180deg)
                
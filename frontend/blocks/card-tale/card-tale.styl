.card-tale
    position relative
    z-index 1
    padding-left 1px
    padding-right 1px
    width 25%
    
    &:hover::before
        transform scale(1.07)
    
    &::before
        position absolute
        z-index 1
        left 2px
        top 0
        content ''
        display block
        width 'calc(%s - %s)' % (100% 2px)
        height 100%
        box-shadow 0 0 10px 0 rgba(black, 8%)
        background-color #fff
        transform scale(1)
        transition all .5s ease
        
    &:hover
        z-index 2
        box-shadow 0 0 18px 0 rgba(black, 38%)
        
    &__inner
        position relative
        z-index 2
        padding-left 21px
        padding-right 17px
        padding-top 17px
        padding-bottom 6px
        
    &__inner-type-action
        position absolute
        z-index 2
        left 1px
        top 17px
        
        .flag:not(:last-child)
            margin-bottom 8px
        
        .best-price
            span
                background-color light-blue
                
        .hit
            span
                background-color green-light
                
        .action
            span
                background-color pink
        
        span
            padding 5px 10px
            font-size 10px
            font-weight bold
            text-transform uppercase
            color white
            border-radius 0 12px 12px 0
            
    &__inner-image
        position relative
        width 100%
        height 196px
        border-bottom 1px solid line-card
            
        img
            position absolute
            left 0
            top 0
            right 0
            bottom 0
            margin auto
            
    &__rating
        margin-top 6px
        
        img:not(:last-child)
            margin-right 4px
    
    &__description
        margin-top 5px
    
        @media all and (-webkit-min-device-pixel-ratio:0)
            margin-top 4px
            
    &__description-name
        display block
        font-size 15px
        line-height 18px
        font-weight 600
        text-decoration none
        color dark-gray
            
    &__description-manufacturer
        margin-top 4px
        display block
        font-size 12px
        color manufacturer
        
    &__prices
        display flex
        justify-content space-between
        
    &__prices-current
        width 50%
        
        p
            font-size 30px
            line-height normal
            font-weight bold
            color green-base
        
        span
            font-size 16px
            font-weight normal
            
    &__prices-old
        margin-top 5px
        padding-left 3px
        width 50%
        
        p
            font-size 12px
            line-height 22px
            font-weight 600
            text-decoration line-through
            
            color dark-gray
            
            &.economy
                margin-top -5px
                font-size 12px
                font-weight 600
                line-height normal
                text-decoration none
                color dark-gray
                
                span
                    position relative
                    margin-right 3px
                    padding_x(7px)
                    color white
                    
                    &::before
                        position absolute
                        z-index -1
                        left 0
                        top 2px
                        content ''
                        display block
                        width 100%
                        height 'calc(%s - %s)' % (100% 4px)
                        background-color pink
                    
    &__order
        margin-top 12px
        display flex
        justify-content space-between
        
    &__order-count
        font-size 0
        
        button
            width 27px
            height 27px
            font-size 18px
            border 1px solid count-button
            background-color white
            cursor pointer
        
        input
            width 56px
            height 27px
            font-size 18px
            text-align center
        
    &__order-decrement
        border-right none !important
        border-radius 3px 0 0 3px
        
    &__order-increment
        border-left none !important
        border-radius 0 3px 3px 0
        
    &__order-button
        
        input
            padding-left 42px
            padding-right 25px
            padding-top 3px
            font-size 16px
            color white
            background-color green-base
            background-image url(../../image/svg/add-card.svg)
            background-repeat no-repeat
            background-position 16px center
            border none
            cursor pointer
    
            @media all and (-webkit-min-device-pixel-ratio:0)
                padding-bottom 1px
            
    &__one-click
        margin-top 5px
        text-align center
        
        a
            font-size 14px
            font-weight bold
            text-decoration none
            letter-spacing .4px
            color orange-base
            transition all .5s ease
            border-bottom 1px solid transparent
            
            &:hover
                border-bottom-color orange-base
        
        
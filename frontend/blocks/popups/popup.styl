.popup
    position fixed
    z-index -1
    top 50%
    left 50%
    padding-top 28px
    padding_x(18px)
    padding-bottom 25px
    opacity 0
    visibility hidden
    box-sizing border-box
    background-color white
    box-shadow 0 0 10px 0 rgba(black, 60%)
    transform translate(-50%, -50%)
    transition-property all
    transition-duration .5s
    transition-timing-function ease
    
    &--visible
        z-index 10
        opacity 1
        visibility visible
    
    &__close
        position absolute
        right -17px
        top -17px
        width 34px
        height 34px
        background-color green-base
        background-image url(../../image/svg/close-popup.svg)
        background-position center
        background-repeat no-repeat
        border-radius 50%
        cursor pointer
        transition all .5s ease
        
        &:hover
            background-color green-hover
            
    input[type=text],
    input[type=email]
    input[type=number]
    input[type=password],
    input[type=tel],
    input[type=date]
        margin-bottom 25px
        padding-left 10px
        width 100%
        height 33px
        box-sizing border-box
        background-color input-filter-bg
        border 1px solid input-filter-border
        transition all .5s ease
        
        &:hover,
        &:focus
            border-color input-border-popup
            
    input[type=submit],
    input[type=button]
        padding_y(5px)
        width 100%
        font-size 16px
        border none
        cursor pointer
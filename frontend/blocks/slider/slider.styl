@import '../../node_modules/swiper/dist/css/swiper.css';

.index
    
    &__slider
        margin-top 31px

.slider
    width 100%
    height 420px
    background-color white
    box-shadow 0 0 8px 0 rgba(shadow, 3%)
    
    &__slide
        display flex
        justify-content center
        align-items center
        align-content center
        height 420px
        background-color white
        
    &__slide-prev,
    &__slide-next
        position absolute
        z-index 2
        top 'calc(%s - %s)' % (50% 24.5px)
        width 32px
        height 49px
        background-color green-base
        cursor pointer
        transition all .3s ease
        
        &::before
            position absolute
            top 16px
            content ''
            display block
            width 22px
            height 3px
            background-color white
            border-radius 1px
            
        &::after
            position absolute
            bottom 16px
            content ''
            display block
            width 22px
            height 3px
            background-color white
            border-radius 2px
        
        &:hover
            background-color green-hover
        
    &__slide-prev
        left 0
        
        &::before
            left 3px
            transform rotate(-45deg)
            
        &::after
            left 3px
            transform rotate(45deg)
        
    &__slide-next
        right 0
    
        &::before
            right 3px
            transform rotate(45deg)
    
        &::after
            right 3px
            transform rotate(-45deg)
.header
    padding-top 22px
    background-color white
    
    @media (max-width 767px)
        padding-top 14px
    
    &__logo
        order 1
        margin-top 7px
        
        @media (min-width 768px) and (max-width 1199px)
            width 215px
            
            img
                width 100%
                height auto
            
        @media (max-width 767px)
            width 100%
            text-align center
    
    &__menu
        margin-top 13px
        background-color green-base
    
        @media (min-width 768px) and (max-width 1199px)
            margin-top 16px
        
    &__ul
        padding 0
        font-size 0
    
        @media (max-width 767px)
            margin_x(-15px)
    
    &__li
        position relative
        display inline-block
        width 33.3333%
        text-align center
    
        @media (max-width 767px)
            width 100%
            text-align left
                
        &^[0]__li--desktop:hover
            
            & > ul
                opacity 1
                visibility visible
        
        &:not(:last-child)
            border-right 1px white solid
    
            @media (max-width 767px)
                border-right none
            
        &--open
            
            & > a
                background-color orange-link
        
        &:first-child
            background-color orange-base
            
            & > a
                padding-left 36px
                background-image url(../../image/svg/ico-catalog.svg)
                background-repeat no-repeat
                background-position 37% center
    
                @media (min-width 768px) and (max-width 1199px)
                    padding-left 23px
                    background-position 26% center
    
                @media (max-width 767px)
                    padding-left 45px
                    background-position 15px center
                
                &:hover
                    background-color orange-link
        
        & > a
            padding-top 6px
            padding-bottom 7px
            display block
            width 100%
            height 100%
            font-size 15px
            text-decoration none
            text-transform uppercase
            color white
            transition all .5s ease
    
            @media (max-width 767px)
                padding-top 11px
                padding-bottom 12px
                padding-left 15px
    
            @media all and (-webkit-min-device-pixel-ratio:0)
                padding_y(8px)
            
            &:hover
                color white
                background-color green-hover
                
        &--active
            
            a
                color white
                background-color green-hover
                
    &__submenu-one
        position absolute
        z-index 3
        top 'calc(%s + %s)' % (100% 3px)
        padding-top 13px
        padding-bottom 8px
        width 100%
        opacity 0
        visibility hidden
        background-color white
        border-top 4px solid orange-link
        box-shadow 9px 9px 18px 0 rgba(black, 38%)
        transition all .2s ease
        
        &--open
            opacity 1
            visibility visible
    
            @media (max-width 767px)
                position static
                border-top none
                box-shadow none
        
        & > li
            position relative
            text-align left
            background-color transparent
            transition all .5 ease
            
            
            &^[0]__submenu-one--has-menu

                &::after
                    position absolute
                    right 6px
                    top 17px
                    content ''
                    display block
                    width 7px
                    height 1px
                    background-color placeholder-gray
                    transform rotate(-45deg)
                    transition all .5s ease
                
                    @media (max-width 767px)
                        right: 17px;
                        top: 17px;
                        width: 6px;
                        height: 2px;
                        border-radius 2px
                        background-color arrow-menu-phone
                
                &::before
                    position absolute
                    right 6px
                    top 13px
                    content ''
                    display block
                    width 7px
                    height 1px
                    background-color placeholder-gray
                    transform rotate(45deg)
                    transition all .5s ease
                    
                    @media (max-width 767px)
                        right 20px
                        top 17px
                        width 6px
                        height 2px
                        border-radius 2px
                        background-color arrow-menu-phone
                

            &:hover
                
                @media (min-width 767px)
                
                    & ^[0]__submenu-two
                        opacity 1
                        visibility visible
                
            &:hover
                background-color orange-link
            
                &::before,
                &::after
                    background-color white
                
                & > a
                    color white
                    
            &.open

                &::before,
                &::after
                    background-color white
                    
                &::before
                    transform rotate(-45deg)
                    
                &::after
                    transform rotate(45deg)
                    
            & > a
                padding_y(5px)
                padding-left 17px
                display block
                text-decoration none
                text-transform uppercase
                
                &.open
                    background-color orange-link
                    color white
            
    &__submenu-two
        position absolute
        left 100%
        top 0
        padding-bottom 8px
        display flex
        flex-wrap wrap
        flex-direction row
        align-items stretch
        justify-content space-between
        width 200%
        opacity 0
        visibility hidden
        background-color white
        box-shadow 9px 9px 18px 0 rgba(black, 38%)
        transition all .5s ease
        
        @media (max-width 767px)
            left 0
            padding_y(10px)
            width 100%
            background-color submenu-phone
            box-shadow none
        
        &--open
            position static
            opacity 1
            visibility visible
        
        li
            padding-right 25px
            width 50%
    
            @media (max-width 767px)
                padding-right 0
                width 100%
            
            &:nth-of-type(odd)
                border-right 1px solid submenu-border
                
                @media (max-width 767px)
                    border-right none
                
            
            &:hover
            
                a
                    color white
                    background-color orange-link
            
            a
                padding_y(5px)
                padding-left 17px
                display block
    
                @media (max-width 767px)
                    padding-left 25px
                
    &__submenu
        
        &--active
            background-color orange-link !important
            
            a
                color white
                
            &::after
                background-color white !important
                
    &__top
        display flex
        flex-direction row
        
        @media (max-width 767px)
            flex-wrap wrap
        
    &__city
        order 2
        position relative
        width 25%
    
        @media (min-width 768px) and (max-width 1199px)
            padding-left 28px
            padding-top 15px
            
        @media (max-width 767px)
            width 100%
            order 3
                
        & > a
            position relative
            font-size 15px
            font-weight 600
            text-decoration none
            color dark-gray
            transition all .3s ease
            
            &:hover
                color green-base
                
                &::before,
                &::after
                    background-color green-hover
            
            &::before
                position absolute
                right -11px
                top 11px
                content ''
                display block
                width 6px
                height 2px
                background-color dark-gray
                transform rotate(45deg)
                transition background-color .3s ease
                
            &::after
                position absolute
                right -14px
                top 11px
                content ''
                display block
                width 6px
                height 2px
                background-color dark-gray
                transform rotate(-45deg)
                transition background-color .3s ease
                
    &__city-list
        position absolute
        z-index 2
        left 0
        top 26px
        padding-top 12px
        padding-bottom 20px
        padding-left 19px
        width 'calc(%s + %s)' % (100% 59px)
        background-color white
        border-top 4px solid green-base
        box-shadow 9px 9px 18px 0 rgba(black, 38%)
        opacity 0
        visibility hidden
        transition all .3s ease
    
        @media (max-width 767px)
            margin-bottom 19px
            margin-left -15px
            padding-top 0
            padding-left 0
            padding-bottom 9px
            width 'calc(%s + %s)' % (100% 30px)
            border-top none
            border-bottom 1px solid border-gray
            box-shadow none
        
        li
            list-style-type none
    
            @media (max-width 767px)
                padding-left 27px
                
                &:hover
                    background-color orange-base
                
                    a
                        display block
                        height 100%
                        color white
            
        a
            font-size 14px
            line-height 30px
            text-decoration none
            color placeholder-gray
            transition all .3s ease
            
            &:hover
                color orange-link
                
    &__city-list--open
        opacity 1
        visibility visible
        
        @media (max-width 767px)
            position static
    
    &__phone
        order 3
        position relative
        padding-left 15px
        padding-right 28px
        width 31%
        text-align right
        background-image url(../../image/svg/phone.svg)
        background-position 23% 5px
        background-repeat no-repeat
    
        @media (min-width 768px) and (max-width 1199px)
            background-position 7% 24px
            
        @media (max-width 767px)
            margin-top 10px
            width 100%
            order 2
            text-align center
            background-image none
            
        a
            padding-left 35px
            font-size 20px
            font-weight 600
            text-decoration none
            color dark-gray
            transition all .5s ease
            
            @media (min-width 768px) and (max-width 1199px)
                position absolute
                left 14px
                top 17px
                font-size 15px
    
            @media (max-width 767px)
                padding-left 0
            
            &:hover
                color green-base
            
        span
            margin-top -6px
            padding-right 3px
            display block
            font-size 15px
            font-weight 600
            text-align right
            color light-gray
    
            @media (min-width 768px) and (max-width 1199px)
                font-size 14px
    
            @media (max-width 767px)
                text-align center
            
    &__form
        position relative
        
    &__input-text
        padding-left 13px
        width 100%
        height 42px
        font-size 15px
        font-weight 600
        color placeholder-gray
        border 1px solid light-gray
        border-left-width 3px
        border-left-color orange-base
        transition all .3s ease
        
        &:hover,
        &:focus
            border-color orange-base
        
    &__input-submit
        position absolute
        top 0
        right 0
        width 42px
        height 42px
        background-image url(../../image/svg/search.svg)
        background-position center
        background-repeat no-repeat
        background-color green-base
        border none
        cursor pointer
    
        @media all and (-webkit-min-device-pixel-ratio:0)
            padding_y(12px)
            
    &__login
        order 4
        position relative
        margin-top 2px
        margin-left 2px
        padding-left 58px
        width 'calc(%s - %s)' % (22% 4px)
        background-image url(../../image/svg/login.svg)
        background-position 15% 5px
        background-repeat no-repeat
        border-left 1px solid border-gray
    
        @media (min-width 768px) and (max-width 1199px)
            padding-left 52px
            padding-top 16px
            width 28%
            background-position 12% 20px
            border none
    
            &::before
                position absolute
                left 0
                top 'calc(%s - %s)' % (50% 19px)
                content ''
                display block
                width 1px
                height 38px
                background-color border-gray
            
        @media (max-width 767px)
            padding-left 32px
            margin-left 0
            width 50%
            background-position left 5px
            border-left none
        
        a
            display block
            font 600 15px/19px open-sans
            text-decoration none
            transition all .3s ease
    
            @media (min-width 768px) and (max-width 1199px)
                font-size 14px
            
            &:hover
                color green-base
            
    &__enter
        color dark-gray
            
    &__reg
        color light-gray
            
    &__cart
        order 5
        position relative
        display flex
        justify-content flex-end
        width 'calc(%s + %s)' % (21% 2px)
        border-left 1px solid border-gray
    
        @media (min-width 768px) and (max-width 1199px)
            width 13.5%
            border-left none
    
            &::before
                position absolute
                left 0
                top 'calc(%s - %s)' % (50% 19px)
                content ''
                display block
                width 1px
                height 38px
                background-color border-gray
            
        @media (max-width 767px)
            width 50%
            border-left none
    
            &::before
                position absolute
                left 0
                top 'calc(%s - %s)' % (50% 33px)
                content ''
                display block
                width 1px
                height 38px
                background-color border-gray
        
    &__cart-ico
        position relative
        margin-top 2px
        margin-right 11%
        width 30px
        height 37px
        background-image url(../../image/svg/cart.svg)
        background-size cover
        background-position center
    
        @media (min-width 768px) and (max-width 1199px)
            margin-top 17px
            margin-right 24%
    
        @media (max-width 767px)
            margin-right 12%
    
    &__cart-counter
        position absolute
        right -16px
        top -11px
        
        span
            padding 2px 8px
            display inline-block
            font-size 15px
            font-weight 600
            line-height normal
            color white
            background-color orange-base
            border-radius 50%
            
            &.ten
                padding 2px 5px
            
    &__cart-price
        width 56%
    
        @media (max-width 767px)
            width 58%
        
        a
            text-decoration none
            
        span
            display block
            font-size 13px
            letter-spacing .5px
            color light-gray
            transition all .3s ease
    
            &:last-of-type
                margin-top -3px
                font-size 16px
                font-weight 600
                color dark-gray
    
                @media (max-width 767px)
                    font-size 15px
        
        &:hover
            span
                color green-base
                
    &__bottom
        margin-top 14px
        
        @media (min-width 768px) and (max-width 1199px)
            margin-top 11px
    
        @media (max-width 767px)
            margin-top 18px
        
        
        
            
        
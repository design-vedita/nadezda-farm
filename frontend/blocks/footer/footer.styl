footer
    position relative
    overflow hidden
    
    &::before
        position absolute
        left -40px
        bottom -20%
        content ''
        display block
        width 250px
        height 350px
        opacity 1
        visibility visible
        background-image url(../../image/svg/pattern-left-90deg.svg)
        background-repeat no-repeat
        background-position center
        transition all .5s ease
    
        @media (max-width 1199px)
            opacity 0
            visibility hidden

    &::after
        position absolute
        right 4px
        bottom -11%
        content ''
        display block
        width 350px
        height 250px
        opacity 1
        visibility visible
        background-image url(../../image/svg/pattern-right.svg)
        background-repeat no-repeat
        background-position center
        transition all .5s ease
    
        @media (max-width 1199px)
            opacity 0
            visibility hidden
        
.footer
    padding-top 37px
    padding-bottom 26px
    background-color green-base
    
    @media (min-width 768px) and (max-width 1199px)
        padding-top 22px
    
    @media (max-width 767px)
        padding-top 22px
        
    ul
        
        margin 0
        padding 0
    
    a
        font-size 15px
        line-height 26px
        font-weight 600
        color white
        
    &__phone
        text-align right
    
        @media (min-width 768px) and (max-width 1199px)
            margin-top 6px
            text-align left
            
        @media (max-width 767px)
            margin-top 26px
            margin-bottom 21px
            text-align left
                
        a
            padding-left 39px
            font-size 24px !important
            font-weight 600
            text-decoration none !important
            color white
            background-image url(../../image/svg/phone-white.svg)
            background-position 0 5px
            background-repeat no-repeat
            transition all .5s ease
            
            &:hover
                color orange-link
                
            @media (min-width 768px) and (max-width 1199px)
                padding-bottom 3px
                font-size 16px !important
                background-size 23px 23px
                background-position 0 2px
                
            & > span
        
                @media (max-width 767px)
                    padding-left 8px
        
        span
            margin-top -1px
            display block
            font-size 14px !important
            font-weight 600
            text-align right
            color myata
    
            @media (min-width 768px) and (max-width 1199px)
                margin-top 5px
                line-height 16px
                
            
            span
                display inline
                color white
                
            @media (min-width 768px) and (max-width 1199px)
                text-align left
    
            @media (max-width 767px)
                text-align left
    
    &__logo
        margin-top 10px
    
        @media (min-width 768px) and (max-width 1199px)
            
            img
                width 100%


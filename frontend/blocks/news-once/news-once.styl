.news-once
	
	&__wrapper
		padding-top 28px
		padding-bottom 30px
		padding_x(24px)
		margin_y(30px)
		background-color white
		box-shadow 0 0 10px 0 rgba(black, 8%)
		
	&__content
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content space-between
		border-bottom 1px solid article-border
	
	&__image
		width 239px
		height 290px
		background-size cover
		background-position center
		background-repeat no-repeat
		
	&__text
		width 'calc(%s - %s)' % (100% 269px)
		
	&__title
		margin-top -6px
		font-size 22px
		font-weight bold
		text-transform uppercase
		color green-base
		
	&__date
		margin-top 6px
		padding-left 23px
		font-size 11px
		font-weight normal
		color manufacturer
		background-image url(../../image/svg/calendar.svg)
		background-position 3px center
		background-repeat no-repeat
		
	&__description
		margin-top 4px
		
		p
			margin-bottom 10px
			
	&__gallery
		margin_x(-12.5px)
		padding-top 20px
		display flex
		flex-wrap wrap
		flex-direction row
		align-items stretch
		
	&__slide
		padding_x(12.5px)
		width 25%
		height 100%
		box-sizing border-box
		
	&__slide-image
		position relative
		width 100%
		height 230px
		background-size cover
		background-position center
		
		a
			position absolute
			z-index 1
			display block
			width 100%
			height 100%
			
		&::before
			position absolute
			z-index 0
			left -7px
			top -7px
			content ''
			display block
			width 100%
			height 100%
			opacity 0
			visibility hidden
			border 7px solid green-base
			transition all .5s ease
		
		&:hover::before
			opacity 1
			visibility visible
			
		
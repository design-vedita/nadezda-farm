.action-one
    
    &__wrapper
        padding_x(30px)
        padding_y(30px)
        margin_y(25px)
        background-color white
        box-shadow 0 0 10px 0 rgba(black, 8%)
        box-sizing border-box
        
    &__inner
        margin_x(-15px)
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
        
    &__left-part,
    &__right-part
        padding_x(15px)
        width 50%
        
    &__title
        font-size 22px
        color green-base
        
    &__full-text
        margin-top 19px
        
    &__right-part
        
        img
            margin-top 51px
            
    &__stock
        margin-top 13px
        font-size 16px
        color orange-base
        
    &__goods
        margin-bottom 30px
        
    &__goods-title
        font-size 20px
        font-weight bold
        color green-base

    &__goods-all
        font-size 14px
        font-weight normal
        text-decoration none
        color manufacturer
        transition all .5s ease
        
        &:hover
            color orange-base
        
    &__goods-list
        margin-top 14px
        display flex
        flex-wrap wrap
        flex-direction row
        justify-content space-between
        align-items stretch
        
    &__card-tale
        margin-bottom 2px
        
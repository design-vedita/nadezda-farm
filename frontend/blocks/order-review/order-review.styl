.order-review
    
    &__title
        margin-bottom 19px
        font-size 20px
        font-weight bold
        color green-base
        
    label
        margin-bottom 9px
        display block
        font-size 15px
        font-weight 600
        line-height 24px
        color gray-text
        
    input[type=text]
        margin-bottom 19px
        padding-left 10px
        width 100%
        height 33px
        background-color white
        border 1px solid light-gray
        transition all .5s ease
        
        &:hover,
        &:focus
            border-color orange-base
        
    textarea
        padding-top 10px
        padding-left 10px
        width 100%
        height 165px
        resize none
        border 1px solid light-gray
        transition all .5s ease
    
        &:hover,
        &:focus
            border-color orange-base
            
    &__button
        margin-top 15px
        display flex
        flex-wrap wrap
        flex-direction row
        
        
    &__submit
        margin-left 1%
        
        input
            padding-left 31px
            padding-right 32px
            padding-top 12px
            padding-bottom 16px
            letter-spacing .4px
            font-size 19px
            border none
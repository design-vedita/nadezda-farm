.subscribe
    padding_y(30px)
    padding_x(22px)
    display flex
    flex-direction row
    flex-wrap wrap
    background-color subscribe-back
    
    &__title
        width 33.5%
        
        img
            display inline-block
            vertical-align middle
        
        span
            margin-left 5%
            vertical-align middle
            font-size 18px
            font-weight normal
            line-height normal
            color article-index
            
    &__form
        width 66.5%
        
        input[type=text]
            padding-left 13px
            max-width 458px
            width 100%
            height 30px
            vertical-align middle
            background-color subscribe-input
            border 1px solid subscribe-input
            transition all .5s ease
            
            &:hover,
            &:focus
                border-color orange-link
        
        input[type=submit]
            margin-left 4%
            padding_y(3px)
            padding_x(66px)
            vertical-align middle
            font-size 16px
            color white
            border none
            cursor pointer
                
        
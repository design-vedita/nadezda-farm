.subscribe
    padding_y(30px)
    padding_x(22px)
    display flex
    flex-direction row
    flex-wrap wrap
    background-color subscribe-back
    
    @media (max-width 767px)
        margin_x(-15px)
        padding_x(15px)
        padding-top 16px
        padding-bottom 24px
        width 'calc(%s + %s)' % (100% 30px)
    
    &__title
        width 33.5%
    
        @media (max-width 1199px)
            width 100%
            text-align center
        
        img
            display inline-block
            vertical-align middle
            
            @media (max-width 767px)
                margin_x(auto)
                display block
        
        span
            margin-left 5%
            vertical-align middle
            font-size 18px
            font-weight normal
            line-height normal
            color article-index
    
            @media (max-width 767px)
                margin-top 11px
                margin-left 0
                display block
                text-align center
            
    &__form
        width 66.5%
    
        @media (min-width 768px) and (max-width 1199px)
            margin-top 16px
            width 100%
    
        @media (max-width 767px)
            margin-top 18px
            width 100%
        
        input[type=text]
            padding-left 13px
            max-width 458px
            width 100%
            height 30px
            vertical-align middle
            background-color subscribe-input
            border 1px solid subscribe-input
            transition all .5s ease
    
            @media (min-width 768px) and (max-width 1199px)
                max-width none
                width 'calc(%s - %s)' % (100% 230px)
            
            @media (max-width 767px)
                max-width none
            
            &:hover,
            &:focus
                border-color orange-link
        
        input[type=submit]
            margin-left 4%
            padding_y(3px)
            padding_x(66px)
            vertical-align middle
            font-size 16px
            color white
            border none
            cursor pointer
    
            @media (min-width 768px) and (max-width 1199px)
                padding_x(43px)
            
            @media (max-width 767px)
                margin-top: 24px;
                margin_x(auto)
                display: block;
@import 'normalize.styl'

*
    margin 0
    padding 0
    font-family open-sans

body
    font-size 14px
    line-height 24px
    color gray-text
    background-color body-color

h1
    margin-bottom 23px
    font-size 22px
    font-weight bold
    text-transform uppercase
    color green-base

h2
    margin-bottom 15px
    font-size 20px
    font-weight bold
    color green-base

p
    font-size 14px
    font-weight 600
    line-height 24px
    color gray-text

ul
    li
        list-style-type none
        font-size 14px
        font-weight normal
        line-height normal
        text-decoration none
        color placeholder-gray
        transition all .5s ease
        
    a
        font-size 14px
        font-weight normal
        line-height normal
        text-decoration none
        color placeholder-gray
        transition all .5s ease
        
        &:hover
            color orange-link

.clear
    clear both
            
.section-title
    font-size 22px
    line-height normal
    font-weight bold
    text-transform uppercase
    color green-base

.section-link
    font-size 14px
    line-height normal
    text-decoration none
    color manufacturer
    transition all .5s ease
    
    &:hover
        color orange-base

.section-list
    margin-top 13px

.index
    
    &__section-white
        padding-top 34px
        margin-top 21px
    
    &__alphabet-substance
        margin-top 23px
        
    &__reviews
        width 57%
        
    &__subscribe
        margin-top 30px
        
    &__text
        margin-top 25px
        
    &__action
        margin-top 23px
        margin_x(-1px)
        
    &__popular-good
        margin-top 44px
    
        @media all and (-webkit-min-device-pixel-ratio:0)
            margin-top 46px
        
    &__brand-catalog
        margin-top 34px

.catalog

    &__alphabet-substance
        margin-top 19px
        
.section-white
    padding-top 30px
    padding-bottom 30px
    background-color white

.section-info
    margin-top 30px
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    align-content stretch

.button-green
    text-decoration none
    color white
    font-size 16px
    background-color green-base
    transition all .5s ease
    
    &:hover
        background-color green-hover

.button-orange
    text-decoration none
    color white
    background-color orange-base
    transition all .5s ease
    
    &:hover
        background-color orange-link
    
input
    outline none

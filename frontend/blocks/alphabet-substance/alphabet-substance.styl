.alphabet-substance
    padding-top 34px
    padding-bottom 10px
    padding_x(29px)
    display flex
    flex-wrap wrap
    flex-direction row
    justify-content space-between
    background-color green-base
    
    @media (min-width 768px) and (max-width 1199px)
        padding-top 21px
        padding-bottom 4px
        
    @media (max-width 767px)
        margin-left -15px
        padding-top 21px
        width 'calc(%s + %s)' % (100% 30px)
    
    &__title
        width 20%
    
        @media (max-width 1199px)
            width 100%
            text-align center
    
        p
            font-size 15px
            line-height normal
            text-transform uppercase
            color white
    
    &__list
        width 80%
    
        @media (max-width 1199px)
            margin-top 19px
            width 100%
            
        @media (max-width 767px)
            margin-top 16px
        
        ul
            text-align justify
            
            &::after
                content ''
                display inline-block
                width 100%
        
        li
            display inline-block
            list-style-type none
            
        a
            padding 5px
            font-size 15px
            line-height normal
            text-decoration none
            text-transform uppercase
            color alphabet
            transition all .5s ease
            
            @media (max-width 767px)
                padding_x(14px)
            
            &:hover
                color white
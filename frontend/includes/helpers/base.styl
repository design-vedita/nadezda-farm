@import 'normalize.styl'

*
    margin 0
    padding 0
    font-family open-sans
    
html.bx-ie11

    .header
        &__li > a
            padding-bottom  8px
            
            
body
    font-size 14px
    line-height 24px
    color gray-text
    background-color body-color
    
    &::before
        position absolute
        left 0
        top 0
        z-index -1
        content ''
        display block
        width 100%
        height 100%
        opacity 0
        visibility hidden
        background-color rgba(black, 50%)
        transition all .5s ease
    
    &.open--popup
        position relative
        
        &::before
            z-index 9
            opacity 1
            visibility visible

h1
    margin-bottom 23px
    font-size 22px
    font-weight bold
    text-transform uppercase
    color green-base

h2
    margin-bottom 15px
    font-size 20px
    font-weight bold
    color green-base

h3
    margin-bottom 22px
    font-size 16px
    line-height normal
    letter-spacing -.2px
    color green-base
    
p
    font-size 14px
    font-weight 600
    line-height 24px
    color gray-text

span.h2
    margin-bottom 15px
    display block
    font-size 20px
    font-weight bold
    color green-base
    
ul
    li
        list-style-type none
        font-size 14px
        font-weight normal
        line-height normal
        text-decoration none
        color placeholder-gray
        //-transition all .5s ease
        
    a
        font-size 14px
        font-weight normal
        line-height normal
        text-decoration none
        color placeholder-gray
        transition all .5s ease
        
        &:hover
            color orange-link

.clear
    clear both
            
.section-title
    font-size 22px
    line-height normal
    font-weight bold
    text-transform uppercase
    color green-base

.section-link
    font-size 14px
    line-height normal
    text-decoration none
    color manufacturer
    transition all .5s ease
    
    &:hover
        color orange-base

.section-list
    margin-top 13px

.index
    
    &__section-white
        padding-top 34px
        margin-top 21px
    
    &__alphabet-substance
        margin-top 23px
        
    &__reviews
        width 57%
    
        @media (min-width 768px) and (max-width 1199px)
            width 46%
            
        @media (max-width 767px)
            margin-top 28px !important
            width 100%
        
    &__subscribe
        margin-top 30px
        
    &__text
        margin-top 25px
        
    &__action
        margin-top 23px
        margin-bottom 30px
        margin_x(-1px)
        
    &__popular-good
        margin-top 44px
    
        @media all and (-webkit-min-device-pixel-ratio:0)
            margin-top 46px
        
    &__brand-catalog
        margin-top 34px

.catalog

    &__alphabet-substance
        margin-top 19px
        
.brand

    &__alphabet-substance
        margin-top 20px
        
.section-white
    padding_y(30px)
    background-color white

.section-info
    margin-top 30px
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content space-between
    align-content stretch
    
.section-light
    padding-top 26px
    padding-bottom 30px
    background-color input-filter-bg

.button-green
    text-decoration none
    color white
    font-size 16px
    background-color green-base
    transition all .5s ease
    outline none
    
    &:hover
        background-color green-hover

.button-orange
    text-decoration none
    color white
    outline none
    background-color orange-base
    transition all .5s ease
    
    &:hover
        background-color orange-link
    
input
    outline none

.inner-content
    
    h1
        margin-top 14px
        
    &__container
        padding_x(30px)
        padding_y(30px)
        margin-bottom 30px
        background-color white
        box-shadow 0 0 10px 0 rgba(black, 8%)
    
        @media (min-width 768px) and (max-width 1199px)
            padding_x(12px)
    
        @media (max-width 767px)
            padding_x(15px)
            margin_x(-15px)
            width 'calc(%s + %s)' % (100% 30px)
        
.point
    padding-left 22px
    background-image url(../../image/svg/point.svg)
    background-repeat no-repeat
    background-position left center
    
.phone
    padding-left 22px
    font-size 14px
    line-height 30px
    background-image url(../../image/svg/phone-contacts.svg)
    background-repeat no-repeat
    background-position left center
    
.mail
    padding-left 22px
    font-size 14px
    line-height 30px
    background-image url(../../image/svg/mail-contacts.svg)
    background-repeat no-repeat
    background-position left center
    
.bg-green
    background-color green-base
    
.center-image
    
    @media (max-width 1199px)
        margin-left auto !important
        margin-right auto !important
        float none !important
        display block
        
input
    -webkit-appearance none